<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.github.ksoichiro.android.observablescrollview.ObservableScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/parallax_image_height"
                android:scaleType="centerCrop"
                android:src="@drawable/bg2"/>
            <TextView
                android:id="@+id/developer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dev_margintop"
                android:text="Apps Developed"
                android:textColor="#fb0071"
                android:textSize="@dimen/dev_textsize" />
            <TextView
                android:id="@+id/by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/developer"
                android:layout_centerHorizontal="true"

                android:text="By"
                android:textColor="#fb0071"
                android:textSize="@dimen/dev_textsize" />
            <TextView
                android:id="@+id/raaja"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/by"
                android:layout_centerHorizontal="true"

                android:text="Raaja Ar"
                android:textColor="#008efb"
                android:textSize="@dimen/dev_namesize" />

            <View
                android:id="@+id/anchor"
                android:layout_width="match_parent"
                android:layout_height="@dimen/parallax_image_height"
                android:minHeight="@dimen/parallax_image_height" />

            <ImageView
                android:id="@+id/maari"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/anchor"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/maari"
                />

            <ImageView
                android:id="@+id/knowme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/maari"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/knowme"
                />
            <ImageView
                android:id="@+id/kingcompass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/knowme"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/kingcompass"
                />
            <ImageView
                android:id="@+id/racear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/kingcompass"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/racear"
                />
        </RelativeLayout>
    </com.github.ksoichiro.android.observablescrollview.ObservableScrollView>
    <include layout="@layout/gradient_header" />
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/Theme.AppCompat.Light.DarkActionBar"
        app:theme="@style/Toolbar" />
</FrameLayout>
